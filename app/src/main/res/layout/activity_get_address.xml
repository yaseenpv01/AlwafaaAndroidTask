<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetAddress"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery Address"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        ></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:id="@+id/cardview"
            >

            <TextView
                android:id="@+id/getcitytext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dubai"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                ></TextView>

            <TextView
                android:id="@+id/getareatext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="abuhail"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/black"
                ></TextView>

            <TextView
                android:id="@+id/getstreettext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22 street"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="60dp"
                android:textColor="@color/black"
                ></TextView>

            <TextView
                android:id="@+id/getbuildingnametext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="atrium,M floor"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="90dp"
                android:textColor="@color/black"
                ></TextView>

            <TextView
                android:id="@+id/getlandmarktext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="al qiyadha metro"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="120dp"
                android:textColor="@color/black"
                ></TextView>

            <TextView
                android:id="@+id/getphonenotext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12345652"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="150dp"
                android:textColor="@color/black"
                ></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="200dp"
                >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:backgroundTint="#FF5B62"
                    android:layout_marginLeft="30dp"
                    ></Button>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:backgroundTint="#F8437D"
                    android:layout_marginLeft="60dp"
                    ></Button>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>