<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddAddressEditText"
    android:orientation="vertical"
    android:background="#F8F5F5"
    >

    <Button
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Spot my location"
        android:backgroundTint="#F8437D"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        ></Button>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >

        <View
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            ></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            ></TextView>

        <View
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            ></View>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            >

            <EditText
                android:id="@+id/cityedittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="City"
                android:background="@color/white"
                ></EditText>

            <EditText
                android:id="@+id/areaedittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Area/Locality"
                android:background="@color/white"
                android:layout_marginTop="55dp"
                ></EditText>

            <EditText
                android:id="@+id/streetedittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Street name"
                android:layout_marginTop="110dp"
                android:background="@color/white"
                ></EditText>

            <EditText
                android:id="@+id/buildingnameedittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Building name Floor no"
                android:layout_marginTop="165dp"
                android:background="@color/white"
                ></EditText>

            <EditText
                android:id="@+id/landmarkedittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Near by landmark"
                android:layout_marginTop="220dp"
                android:background="@color/white"
                ></EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="275dp"
                android:weightSum="3"
                >

                <com.hbb20.CountryCodePicker
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    ></com.hbb20.CountryCodePicker>

                <EditText
                    android:id="@+id/phonenoedittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:inputType="phone"
                    android:background="@color/white"
                    android:hint="Phone Number"
                    ></EditText>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <Button
        android:id="@+id/showdatambtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Show Data"
        android:layout_gravity="center"
        android:backgroundTint="#F8437D"
        ></Button>

    <Button
        android:id="@+id/confirmbtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Confirm"
        android:layout_gravity="center"
        android:backgroundTint="#F8437D"
        ></Button>


</LinearLayout>